{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "rootDir": ".",
    "outDir": "build",
    "noImplicitAny": true,
    "allowJs": true,
    "target": "es2022",
    "module": "commonjs",
    "removeComments": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "#/*": ["src/*"]
    }
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
